<!DOCTYPE html>
<html>
  <head>
    <title>KaijuFighter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>

  <body>
  <%if current_user %>
    <%=link_to "User Home Page", user_path(current_user.id)%> |
    <%=link_to "All Monsters", monsters_path%> |
    <%=button_to "Log Out", logout_path, method: :post%>
  <%else%>
    <%=link_to "Sign Up", signup_path%> |
    <%=link_to "Log In", login_path%> 
  <%end%>
  <br /><br />
    <%= yield %>
  </body>
</html>
